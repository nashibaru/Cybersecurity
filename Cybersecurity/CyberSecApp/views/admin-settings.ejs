<%- include('layout') %>

<h2>Ustawienia bezpieczeństwa</h2>
<% if (message) { %><div style="color:green"><%= message %></div><% } %>
<form method="post" action="/admin/settings">
  <div>
    <label>Długość hasła:
      <input type="number" name="min_length" value="<%= settings.min_length %>" min="4" />
    </label>
  </div>
  <div>
    <label><input type="checkbox" name="require_special" <%= settings.require_special ? 'checked' : '' %> /> Znaki specjalne</label>
  </div>
  <div>
    <label><input type="checkbox" name="require_lowercase" <%= settings.require_lowercase ? 'checked' : '' %> /> Małe litery</label>
  </div>
  <div>
    <label><input type="checkbox" name="require_uppercase" <%= settings.require_uppercase ? 'checked' : '' %> /> Wielkie litery</label>
  </div>
  <div>
    <label>Ważność hasła (dni):
      <input type="number" name="pwd_valid_days" value="<%= settings.pwd_valid_days %>" min="1" />
    </label>
  </div>
  <button type="submit">Zapisz</button>
</form>

<p><a href="/admin/users">Zarządzanie użytkownikami</a></p>
<p><a href="/admin/logs">Przegląd logów aktywności</a></p>
<p><a href="/logout">Wyloguj</a></p>


<%- include('footer') %>