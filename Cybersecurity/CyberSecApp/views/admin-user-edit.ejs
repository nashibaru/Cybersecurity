<%- include('layout') %>

<h2>Edytuj użytkownika</h2>

<% if (message) { %><div style="color:red"><%= message %></div><% } %>

<form method="post" action="/admin/users/<%= user.id %>/edit">
  <div>
    <label>Nazwa użytkownika: <input name="username" value="<%= user.username %>" required /></label>
  </div>
  <div>
    <label>Pełna nazwa: <input name="full_name" value="<%= user.full_name %>" /></label>
  </div>
  <div>
    <label>Rola:
      <select name="role">
        <option value="USER" <%= user.role==='USER' ? 'selected' : '' %>>USER</option>
        <option value="ADMIN" <%= user.role==='ADMIN' ? 'selected' : '' %>>ADMIN</option>
      </select>
    </label>
  </div>
  <div>
    <label>Blokada: <input type="checkbox" name="blocked" <%= user.blocked ? 'checked' : '' %> /></label>
  </div>
  <div>
    <label>Nowe hasło (opcjonalnie): <input type="password" name="temp_password" /></label>
  </div>
  <button type="submit">Zapisz zmiany</button>
</form>

<p><a href="/admin/users">Powrót do listy użytkowników</a></p>


<%- include('footer') %>