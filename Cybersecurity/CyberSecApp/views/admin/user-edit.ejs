                        <div class="form-group">
                            <label for="edit_username">Nazwa u≈ºytkownika *</label>
                            <input type="text" id="edit_username" name="username" 
                                   class="form-control" required 
                                   value="<%= user.username %>">
                        </div>

                        <div class="form-group">
                            <label for="edit_full_name">Imiƒô i nazwisko</label>
                            <input type="text" id="edit_full_name" name="full_name" 
                                   class="form-control" 
                                   value="<%= user.full_name || '' %>">
                        </div>

                        <div class="form-group">
                            <label for="edit_role">Rola</label>
                            <select id="edit_role" name="role" class="form-control">
                                <option value="USER" <%= user.role === 'USER' ? 'selected' : '' %>>USER</option>
                                <option value="ADMIN" <%= user.role === 'ADMIN' ? 'selected' : '' %>>ADMIN</option>
                            </select>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" id="edit_blocked" name="blocked" 
                                   class="form-check-input" 
                                   <%= user.blocked ? 'checked' : '' %>>
                            <label for="edit_blocked" class="form-check-label">
                                Konto zablokowane
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="edit_temp_password">Nowe has≈Ço (opcjonalnie)</label>
                            <div class="d-flex gap-1 align-center">
                                <input type="password" id="edit_temp_password" name="temp_password" 
                                       class="form-control" 
                                       placeholder="Zostaw puste, aby nie zmieniaƒá has≈Ça">
                                <button type="button" id="generateOtpBtnEdit" class="btn btn-warning">
                                    üîê Generuj OTP
