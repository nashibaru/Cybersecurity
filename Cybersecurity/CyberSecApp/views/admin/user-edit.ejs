            <% } %>

            <nav class="nav-links">
                <a href="/admin/settings">Ustawienia</a>
                <a href="/admin/users">U≈ºytkownicy</a>
                <a href="/admin/licenses">Klucze Licencyjne</a>
                <a href="/admin/logs">Logi</a>
                <a href="/user/change-password">Zmiana has≈Ça</a>
                <a href="/logout">Wyloguj</a>
            </nav>

            <div class="card">
                <div class="card-header">
                    Dane u≈ºytkownika
                </div>
                <div class="card-body">
