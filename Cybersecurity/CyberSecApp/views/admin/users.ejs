                                        <th>Rola</th>
                                        <th>Status</th>
                                        <th>Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(u => { %>
                                        <tr>
                                            <td><strong>#<%= u.id %></strong></td>
                                            <td><code><%= u.username %></code></td>
                                            <td><%= u.full_name || '-' %></td>
                                            <td>
                                                <span class="badge <%= u.role === 'ADMIN' ? 'badge-primary' : 'badge-secondary' %>">
                                                    <%= u.role %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (u.blocked) { %>
                                                    <span class="text-danger">üö´ Zablokowany</span>
                                                <% } else { %>
                                                    <span class="text-success">‚úÖ Aktywny</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <form method="post" action="/admin/users/<%= u.id %>/block" style="display: inline;">
