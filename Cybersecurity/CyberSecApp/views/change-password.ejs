<%- include('layout') %>

<h2>Zmień hasło</h2>

<% if (message) { %>
  <div style="color:red"><%= message %></div>
<% } %>

<% if (mustChange) { %>
  <div style="color:blue">
    System wymaga zmiany hasła (pierwsze logowanie lub hasło wygasło).
  </div>
<% } %>

<form method="post" action="/user/change-password">
  <div>
    <label>Stare hasło:
      <input name="old_password" type="password" required />
    </label>
  </div>
  <div>
    <label>Nowe hasło:
      <input name="new_password" type="password" required />
    </label>
  </div>
  <div>
    <label>Powtórz nowe:
      <input name="new_password2" type="password" required />
    </label>
  </div>
  <button type="submit">Zmień</button>
</form>

<p><a href="/logout">Wyloguj</a></p>

<%- include('footer') %>